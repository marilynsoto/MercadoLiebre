<!DOCTYPE html>
<html>

    <%- include('./partials/head') %> 

    </head>
    <body>

        <%- include('./partials/header') %> 

        </header>
        <div class="main-login">
            <div class="login-container">
                <div class="title-login">
                    <h3>Iniciar Seccion</h3>
                </div>
                <form action="">
                    <div class="item-login"><label for="email">Email</label></div>
                    <div class="item-login"><input type="email" name="email" id="email" placeholder="pepito@gmail.com"></div>
                    <div class="item-login"><label for="password">Contraseña</label></div>
                    <div class="item-login"><input type="password" name="password" id="password" placeholder="********"></div>
                    <div class="remenber-forget">
                        <div class="remenber">
                            <input type="checkbox" name="remenber">
                            <label for="remenber">Recordarme</label>
                        </div>
                        <div class="forget">
                            <a href="/">¿Olvidaste tu contraseña?</a>
                        </div>
                    </div>
                    <div class="item-login-submit">
                        <input type="submit" value="INGRESAR"></input>
                    </div>
                </form>
            </div>
        </div>

        <%- include('./partials/footer') %> 
        </footer>
    </body>
</html>