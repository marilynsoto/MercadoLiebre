<!DOCTYPE html>
<html>

    <%- include('./partials/head') %> 

    </head>
    <body>

        <%- include('./partials/header') %> 
        </header>
        
        <main class="main-box">
            <h3><i>Descripcion del producto: <%= product.name %></i> </h3>
            <div class="box-container">
                <div class="image-description-detail">
                    <div class="image-detail">
                        <img src="/images/<%= product.image %>" alt="product">
                    </div>
                    <p class="description-detail"><%= product.description %> </p>
                </div>
                <div class="data-detail">
                    <h3><%= product.name %> </h3>
                    <div class="item-price-discount-detail">
                        <div class="price-detail"><p>$<%= product.price %></p></div>
                        <div class="discount-detail"><p><%= product.discount %>% OFF</p></div>
                    </div>
                    <div class="item-payment-detail">
                        <p><i class="fas fa-credit-card"></i> Paga en 12 cuotas sin interes</p>
                        <p"><i class="fas fa-store"></i> Retiro gratis en locares del vendedor</p>
                    </div>
                    <div class="item-detail">
                        <div><a href="/">COMPRAR AHORA</a></div>
                        <div><a href="/products/edit/<%= product.id %>">EDITAR</a></div>
                        <div>
                        <form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST">
                            <button type="submit">ELIMINAR</button>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include('./partials/footer') %> 
        </footer>
    </body>
</html>