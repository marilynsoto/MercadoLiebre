<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %> 
</head>
<body>
    
    <%- include('./partials/header') %> 
    </header>

    <section class="banner">
        <img src="images/img-home-banner.jpg" alt="Banner de Ofertas">
    </section>
    
    <main class="main-container">
        <section class="last-visit">
            <div class="title-products">
                <p>Basado en tu Ãºltima visita</p>
            </div>
            <div class="products-container">
                <% visited.forEach(product => { %> 
                <article class="product">
                    <a href="/products/detail/<%= product.id %>">
                        <img src="images/<%= product.image %>" alt="product">
                        <div class="main-product">
                            <i class="fas fa-truck"></i>
                            <div class="price-discount">
                                <p class="price">$<%= product.price %> </p>
                                <p class="discount"><%= product.discount %>% OFF</p>
                            </div>
                            <h4 class="description"><%= product.name %> </h4>
                        </div>
                    </a>
                </article>
                <% }); %> 
            </div>
        </section>
        <section class="offers">
            <div class="title-products">
                <p>Ofertas</p>
            </div>
            <div class="products-container">
                <% inSale.forEach(product => { %> 
                <article class="product">
                    <a href="/products/detail/<%= product.id %>">
                        <img src="images/<%= product.image %>" alt="product">
                        
                        <div class="main-product">
                            <i class="fas fa-truck"></i>
                            <div class="price-discount">
                                <p class="price">$<%= product.price %> </p>
                                <p class="discount"><%= product.discount %>% OFF</p>
                            </div>
                            <h4 class="description"><%= product.name %> </h4>
                        </div>
                    </a>
                </article>
                <% }); %> 
            </div>
        </seccion>
    </main>
</body>
<%- include('./partials/footer') %> 
</footer>
</html>